DirectoryIndex index.php

ErrorDocument 404 "Looks like mod_rewrite does not work. Please set url_composition to 'real' in user/config.php and try again."

Options -Indexes

<IfModule mod_rewrite.c>
RewriteEngine On

# Security: Block sensitive file types with 403 Forbidden
RewriteCond %{REQUEST_URI} \.(psa|sql)$ [NC]
RewriteRule .* - [F,L]

# Block settings.json
RewriteCond %{REQUEST_URI} /user/settings\.json$ [NC]
RewriteRule .* - [F,L]

# Block config files
RewriteCond %{REQUEST_URI} /user/config\.php$ [NC]
RewriteRule .* - [F,L]

RewriteCond %{REQUEST_URI} /system/core\.php$ [NC]
RewriteRule .* - [F,L]

RewriteCond %{REQUEST_URI} /system/default/config\.php$ [NC]
RewriteRule .* - [F,L]

# Block log files
RewriteCond %{REQUEST_URI} /user/logs/ [NC]
RewriteRule .* - [F,L]

# Block backup directory
RewriteCond %{REQUEST_URI} /user/backup/ [NC]
RewriteRule .* - [F,L]

# Block caches directory
RewriteCond %{REQUEST_URI} /user/caches/ [NC]
RewriteRule .* - [F,L]

# Multiuser mode when users are organized by host:
RewriteCond %{DOCUMENT_ROOT}/users/%{HTTP_HOST}/files%{REQUEST_URI} -f
RewriteRule .* users/%{HTTP_HOST}/files/$0 [L]

# For times when userpics were in user/ folder:
# RewriteRule user/(.*) users/%{HTTP_HOST}/$1 [L]

# Fix mod_rewrite's trailing slash bug:
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule (.+)[^/]$ $1/ [R=301,L]

RewriteCond %{REQUEST_URI} \.htaccess$
RewriteRule .* - [F]

RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^ - [L]

RewriteRule ^index\.php$ - [L]
RewriteRule .* index.php?go=$0 [QSA,L,B]
</IfModule>

<IfModule mod_security.c>
SecFilterEngine Off
</IfModule>

<IfModule mod_charset.c>
CharsetRecodeMultipartForms Off
CharsetSourceEnc windows-1251
</IfModule>

<IfModule mod_authz_core.c>
  <FilesMatch ^.*\.(psa|json|sql|htaccess)$>
    Require all denied
  </FilesMatch>
</IfModule>

<IfModule !mod_authz_core.c>
  <FilesMatch ^.*\.(psa|json|sql|htaccess)$>
    Deny from all
  </FilesMatch>
</IfModule>

